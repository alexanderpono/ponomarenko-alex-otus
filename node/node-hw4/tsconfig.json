{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@ui-src/*": ["ui-src/*"]
    },
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "removeComments": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [ "src/**/*", "ui-src/components"  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]  
}
