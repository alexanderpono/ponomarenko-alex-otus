{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@/*": ["./*"]
    },
    "target": "es6",
    "module": "commonjs",
    "allowJs": false,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "outDir": "temp/build"
  },
  "include": ["src/**/*"]
}
