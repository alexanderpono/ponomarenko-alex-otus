#!/bin/bash

if [ $# -ne "2" ]
then
    echo "Ожидается 2 параметра"
    echo "Пример использования: removeHddFromRaid md10 sdc"
    exit
fi


raidName=$1
hdd=$2

linesNo=`mdadm -D /dev/$raidName | grep $hdd | wc -l`
if [ $linesNo -eq 0 ] 
then
    echo "SetFailed: no device '$hdd' in RAID $raidName"
    exit
fi

mdadm /dev/$raidName --remove $hdd
